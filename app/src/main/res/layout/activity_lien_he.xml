<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background ="@drawable/hinhnenlienhe2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.LienHeActivity">

    <TextView
        android:gravity="center"
        android:id="@+id/textView"
        android:layout_width="278dp"
        android:layout_height="37dp"
        android:layout_marginTop="52dp"
        android:text="Liên hệ với chúng tôi"
        android:textColor="#FFF300"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.481"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
<LinearLayout
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txthovaten"
        android:layout_width="353dp"
        android:layout_height="87dp"
        android:layout_gravity="center"
        android:background="@drawable/boder"
        android:drawableLeft="@drawable/iconhovaten"
        android:drawablePadding="-21dp"
        android:gravity="center"
        android:text="Họ và tên: Nguyễn Văn Chính"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.096" />
</LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>